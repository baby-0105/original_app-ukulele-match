<div class="text-center mb-5">
  <h2>Ukulele Match　新規登録画面</h2>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @user, local: true) do |f| %>
        <% render 'layouts/error_messages', model: f.object%>
      
      <div class="form-group">
        <%= f.label :name, 'ユーザー名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'パスワード（確認）' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :password, '都道府県' %>
        <%= f.text_field :prefecture, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :password, 'ukulele歴' %>
        <%= f.text_field :year, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :password, '自己紹介' %>
        <%= f.text_field :introduce, class: 'form-control' %>
      </div>
      
      <div class="form-group"> <!--後変更-->
        <%= f.label :password, 'プロフィール画像' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit 'Sign up', class: 'btn btn-primary btn-block' %>
    <% end %>
    
    <div class="text-center mb-5 mt-3">
        <%= link_to '登録済みの方はこちら' %> <!--#-->
    </div>
  </div>
</div>