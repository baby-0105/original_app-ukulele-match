<div class="text-center mb-5">
  <h2>Ukulele Match　新規登録画面</h2>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @user, local: true) do |f| %>
        <% render 'layouts/error_messages', model: f.object%>
      
      <div class="form-group mb-4">
        <%= f.label :name, 'ユーザー名' %>
        <%= f.text_field :name, class: 'form-control', placeholder:'ユーザー名' %>
      </div>

      <div class="form-group mb-4">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control', placeholder:'メールアドレス'%>
      </div>

      <div class="form-group mb-4">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control', placeholder:'パスワード'%>
      </div>

      <div class="form-group mb-4">
        <%= f.label :password_confirmation, 'パスワード（確認）' %>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder:'パスワード（確認）' %>
      </div>
      
      <div class="form-group mb-4">
        <%= f.label :prefecture, '都道府県' %>
        <%= f.text_field :prefecture, class: 'form-control', placeholder:'都道府県' %>
      </div>
      
      <div class="form-group mb-4">
        <%= f.label :year, 'ukulele歴' %>
        <%= f.text_field :year, class: 'form-control', placeholder:'ukulele歴' %>
      </div>
      
      <div class="form-group mb-4">
        <%= f.label :introduce, '自己紹介' %>
        <%= f.text_area :introduce, class: 'form-control pb-5', placeholder:'自己紹介' %>
      </div>
      
      <div class="form-group mb-4"> <!--後変更-->
        <%= f.label :picture, 'プロフィール画像' %>
        <%= f.text_field :picture, class: 'form-control', placeholder:'プロフィール画像' %>
      </div>

      <%= f.submit 'Sign up', class: 'btn btn-primary btn-block' %>
    <% end %>
    
    <div class="text-center mb-5 mt-3">
        <%= link_to '登録済みの方はこちら', login_path %> <!--#-->
    </div>
  </div>
</div>