<header class="position-fixed w-100 border-bottom border-secondary">
	<div class="container-fuild">
		<nav class="navbar navbar-expand-md sticky-top navbar-dark text-right">
			<% if logged_in? %>
				<a class="navbar-brand" href="users">Ukulele Match</a>
			<% else %>
				<a class="navbar-brand" href="/">Ukulele Match</a>
			<% end %>
			<button class="navbar-toggler" data-toggle="collapse" data-target="#menu" type="button">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div id="menu" class="collapse navbar-collapse text-center h5">
				<ul class="navbar-nav ml-auto">
					<% if logged_in? %>
	          <li class="nav-item border-bottom border-success mr-3 mr-lg-4"><%= link_to 'User icon', users_path(current_user), class: 'nav-link' %></li>
	          <li class="nav-item border-bottom border-success mr-3 mr-lg-4"><%= link_to 'Message', users_path(current_user), class: 'nav-link' %></li>
	          <li class="nav-item border-bottom border-success mr-3 mr-lg-4"><%= link_to 'Log out', logout_path, class: 'nav-link', method: :delete %></li>
        	<% else %>
						<li class="nav-item border-bottom border-success mr-3 mr-lg-4"><%= link_to 'Log in', login_path, class:'nav-link' %></li>
						<li class="nav-item border-bottom border-success mr-3 mr-lg-4"><%= link_to 'Sign up', users_path, class:'nav-link'%></li>
					<% end %>
				</ul>
			</div>	
		</nav>
	</div>
</header>