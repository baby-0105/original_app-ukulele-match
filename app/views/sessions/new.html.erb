<div class="text-center">
  <h1>ログインページ</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <div class="form-group mb-4">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
      </div>

      <div class="form-group mb-4">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
      </div>

      <%= f.submit 'Login', class: 'btn btn-primary btn-block' %>
    <% end %>

    <p class="text-center mt-3"><%= link_to '新規登録はこちら', signup_path %></p>
  </div>
</div>